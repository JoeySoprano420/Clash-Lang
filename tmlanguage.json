// .vscode/syntax.tmLanguage.json
{
  "scopeName": "source.clsh",
  "patterns": [
    { "match": "\\b(func|let|while|loop|print|return|if_eq|exit|import|goto)\\b", "name": "keyword.control.clash" },
    { "match": "\\b(int|string|struct)\\b", "name": "storage.type.clash" },
    { "match": "\\b([0-9]+)\\b", "name": "constant.numeric.clash" }
  ]
}

{
  "scopeName": "source.clsh",
  "patterns": [
    { "match": "\\b(func|let|print|return|if_eq|while)\\b", "name": "keyword.control.clash" },
    { "match": "\\b(int|string)\\b", "name": "storage.type.clash" },
    { "match": "\\b([0-9]+)\\b", "name": "constant.numeric.clash" }
  ]
}

{
  "name": "MyClashupGame",
  "entry": "main.clsh",
  "modules": ["math", "io"],
  "build": {
    "type": "elf",
    "optimize": true
  }
}

{
  "scopeName": "source.clsh",
  "patterns": [
    { "match": "\\b(let|print|while|func|return|if_eq|exit|goto|import|struct)\\b", "name": "keyword.control.clash" },
    { "match": "\\b(int|string|bool)\\b", "name": "storage.type.clash" },
    { "match": "\\b([0-9]+)\\b", "name": "constant.numeric.clash" }
  ]
}

